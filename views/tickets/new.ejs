<%- include('../partials/navbar.ejs') %>
  <section class="mt-5"> 
    <div class="container-fluid">
        <div class="row justify-content-center">
            <form class="col-lg-8 col-sm-6" method="POST" action="/flights/<%= id %>/tickets">
                <div class="form-group mt-1">
                    <label for="seat">Seat</label>
                    <input type="text" class="form-control" placeholder="A22" name="seat" pattern="[A-F][1-9]\d?" required>
                </div>
                <div class="form-group mt-1">
                  <label for="price">Flight Price</label>
                  <input type="text" class="form-control" placeholder="$325" name="price" required>
                </div>
                <div class="form-group mt-1">
                  <input type="hidden" name="flight" class="form-control" value="<%= id %>">
                </div>
                <div class="form-group mt-3">
                  <input type="submit" class="form-control btn btn-outline-success">
                </div>
              </form>
        </div>
    </div>
  </section>
<%- include('../partials/footer.ejs') %>